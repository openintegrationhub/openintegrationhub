{
  "name": "logic-gateway",
  "version": "0.0.1",
  "description": "Logic gateway",
  "main": "index.js",
  "author": "Basaas GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node index.js",
    "start:nodemon": "nodemon index.js --watch ./ --watch ../../lib/secret-service",
    "start:nodemon:minikube": ". ../../minikube/.env && yarn start:nodemon",
    "start:container": "nodemon index.js --watch ./ --watch ../../lib/secret-service",
    "test": "echo \"noop\"",
    "build": "echo \"No Build defined\"",
    "build:docker": "echo \"No Docker Build defined\""
  },
  "dependencies": {
    "@basaas/node-logger": "1.1.5",
    "@openintegrationhub/event-bus": "*",
    "@openintegrationhub/iam-utils": "*",
    "base64url": "3.0.1",
    "dotenv": "6.2.0",
    "morgan": "^1.9.1",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "5.10.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "22.1.2",
    "jest": "26.6.0",
    "nock": "10.0.4",
    "nodemon": "2.0.4",
    "supertest": "3.4.2"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": ""
    },
    "watch": [
      "src/",
      "doc/"
    ],
    "ext": "js json yaml"
  },
  "xxjest": {
    "globalSetup": "./test/setup.js",
    "globalTeardown": "./test/teardown.js",
    "testEnvironment": "./test/mongo-environment.js",
    "setupTestFrameworkScriptFile": "./test/jest.setup.js",
    "silent": false
  }
}
