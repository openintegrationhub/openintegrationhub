{
  "name": "app-directory",
  "version": "1.6.2",
  "private": true,
  "description": "",
  "main": "index.js",
  "author": "Basaas GmbH",
  "license": "Apache 2.0",
  "scripts": {
    "start": "NODE_ENV='production' node src/index.js",
    "test": "jest --silent=false --runInBand --forceExit",
    "lint": "eslint src/",
    "watch": "nodemon src/index.js",
    "start:container": "nodemon src/index.js --watch src/",
    "build:docker": "docker build -t openintegrationhub/app-directory:${VERSION} -f Dockerfile  ../../",
    "coverage": "npm test --coverage"
  },
  "dependencies": {
    "@basaas/node-logger": "1.1.5",
    "@openintegrationhub/event-bus": "*",
    "@openintegrationhub/iam-utils": "*",
    "base64url": "3.0.1",
    "cors": "^2.8.5",
    "dotenv": "6.2.0",
    "express": "4.17.1",
    "mongoose": "6.2.1",
    "morgan": "^1.9.1",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "swagger-ui-express": "4.1.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.0",
    "jest": "26.6.0",
    "mongodb": "4.1.2",
    "mongodb-memory-server": "7.4.0",
    "nock": "10.0.4",
    "nodemon": "2.0.4",
    "supertest": "3.4.2"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": ""
    },
    "watch": [
      "src/",
      "doc/"
    ],
    "ext": "js json yaml"
  }
}