    "eslint-plugin-mocha": "4.12.1",
    "eslint-plugin-node": "6.0.1",
    "mocha": "6.0.1",
    "sinon": "7.2.4",
    "sinon-chai": "3.3.0"
  },
  "main": "src/index.js"
}
