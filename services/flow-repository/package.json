{
  "name": "flow-repository",
  "version": "1.1.2",
  "description": "Stores and manages integration flows.",
  "main": "index.js",
  "scripts": {
    "start": "node app/index.js",
    "start:nodemon": "NODE_ENV=development nodemon -r dotenv/config app/index.js --watch app/ | bunyan",
    "start:container": "nodemon -r dotenv/config app/index.js --watch app/ | bunyan",
    "start:nodemon:minikube": ". ../../minikube/.env && yarn start:nodemon",
    "pretest": "eslint app test --ext .js --ext .json",
    "test": "jest --runInBand",
    "lint_fix": "eslint app test --fix",
    "build": "echo \"No Build defined\"",
    "build:docker": "docker build -t openintegrationhub/flow-repository:${VERSION} -f Dockerfile ../../"
  },
  "dependencies": {
    "@openintegrationhub/event-bus": "*",
    "@openintegrationhub/iam-utils": "*",
    "body-parser": "^1.19",
    "bunyan": "^1.8.14",
    "bunyan-format": "^0.2.1",
    "cors": "^2.8.5",
    "cronstrue": "^1.94.0",
    "express": "^4.17.1",
    "mongoose": "5.11.8",
    "request": "^2.87.0",
    "request-promise": "^4.2.5",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.0",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-mocha": "^5.2.0",
    "jest": "26.6.0",
    "mongod": "^2.0.0",
    "mongodb-memory-server": "6.6.3",
    "nodemon": "^2.0.4",
    "dotenv": "^8.2.0",
    "nock": "^13.0.2",
    "jest-environment-node": "^26.1.0",
    "mongodb": "^3.5.9",
    "path": "^0.12.7",
    "supertest": "^3.1.0"
  },
  "author": "hschmidt",
  "license": "Apache-2.0"
}